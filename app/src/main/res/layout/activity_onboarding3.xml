<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C7D8FF"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/onboardingIcon"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26dp"
        android:src="@drawable/onboarding3"
        app:civ_border_color="#FAFAFA"
        app:civ_border_width="2dp" />

    <!-- Title TextView -->
    <TextView
        android:id="@+id/onboardingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:text="Safe and secure meetings"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold" />

    <!-- Description TextView -->
    <TextView
        android:id="@+id/onboardingDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="Chat in-app and meet at recommended locations to ensure a safe experience."
        android:textColor="#6D6D6D"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/rounded_corner_image_3"
        android:src="@drawable/dotthree" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="90dp"
        android:backgroundTint="@color/white"
        android:text="Get Started"
        android:textColor="#000000"
        android:textSize="16sp" />

    <View
        android:id="@+id/bottomLine"
        android:layout_width="80dp"
        android:layout_height="3dp"
        android:layout_marginTop="100dp"
        android:background="#000000" />

</LinearLayout>
